{
    "name": "node-typescript-express-rest",
    "version": "1.0.0",
    "description": "Nodejs + TypeScript + Swagger + Docker + Express seed project",
    "main": "index.js",
    "scripts": {
        "check": "npm-check --skip-unused",
        "preinstall": "npm i -g nodemon ts-node rimraf npm-run-all npm-check",
        "start": "npm-run-all -s clean build start:simple",
        "start:simple": "node dist/index.js",
        "start:dev": "nodemon --watch src -e ts,tsx --exec ts-node src/index.ts",
        "start:watch": "npm-run-all -s clean build -p watch:*",
        "clean": "npm-run-all -p clean:*",
        "clean:dist": "rimraf dist",
        "clean:cov": "rimraf coverage",
        "build": "npm-run-all -s build:ts build:swagger",
        "build:ts": "tsc",
        "build:swagger": "node dist/tasks/swagger.js",
        "watch:ts": "tsc --watch",
        "lint": "tslint src/{,**/}*.ts",
        "pretest": "npm-run-all -s clean build",
        "test": "npm-run-all -s test:cov test:cov:remap",
        "test:api": "mocha dist/tests/api/*.spec.js -R spec --bail",
        "test:unit": "mocha dist/tests/unit/*.spec.js -R spec --bail",
        "test:cov": "istanbul cover node_modules/mocha/bin/_mocha -- dist/**/*.spec.js -R spec --bail",
        "test:cov:remap": "npm-run-all test:cov:remap:*",
        "test:cov:remap:html": "remap-istanbul -i coverage/coverage.json -o coverage/lcov-report -t html",
        "test:cov:remap:loc": "remap-istanbul -i coverage/coverage.json -o coverage/lcov.info -t lcovonly"
    },
    "keywords": [
        "typescript",
        "swagger",
        "express"
    ],
    "engines": {
        "node": "10.x.x",
        "npm": "6.x.x"
    },
    "engineStrict": true,
    "author": "Ivan",
    "license": "MIT",
    "homepage": "https://github.com/ivan2261/node-typescript-express-rest#readme",
    "dependencies": {
        "bcrypt-nodejs": "0.0.3",
        "bluebird": "^3.5.5",
        "body-parser": "^1.15.2",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.11.0",
        "config": "^3.2.5",
        "cors": "^2.7.1",
        "event-dispatch": "^0.4.1",
        "express": "^4.14.0",
        "express-jwt": "^5.3.1",
        "express-ping": "^1.1.0",
        "express-validator": "^4.3.0",
        "express-winston": "^4.0.2",
        "glob": "^7.0.5",
        "mongoose": "^5.7.1",
        "reflect-metadata": "^0.1.3",
        "routing-controllers": "^0.8.0",
        "socket.io": "^2.3.0",
        "socketio-jwt": "^4.5.0",
        "swagger-client": "^3.9.6",
        "swagger-tools": "^0.10.1",
        "typedi": "^0.8.0",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/bcrypt-nodejs": "0.0.30",
        "@types/bluebird": "^3.5.18",
        "@types/body-parser": "^1.17.1",
        "@types/chai": "^4.2.7",
        "@types/config": "0.0.36",
        "@types/cors": "^2.8.6",
        "@types/express": "^4.0.29",
        "@types/express-jwt": "0.0.42",
        "@types/glob": "^7.1.1",
        "@types/js-yaml": "^3.5.25-alpha",
        "@types/mocha": "^5.2.7",
        "@types/mongoose": "^5.5.18",
        "@types/node": "^13.1.7",
        "@types/serve-static": "^1.7.27",
        "@types/socket.io": "^2.1.4",
        "@types/supertest": "^2.0.3",
        "@types/winston": "^2.2.25-alpha",
        "chai": "^4.2.0",
        "codeclimate-test-reporter": "^0.5.1",
        "istanbul": "^0.4.4",
        "mocha": "^7.0.0",
        "npm-run-all": "^4.1.5",
        "remap-istanbul": "^0.13.0",
        "rimraf": "^3.0.0",
        "source-map-support": "^0.5.16",
        "supertest": "^4.0.2",
        "swagger-jsdoc": "^3.5.0",
        "ts-helpers": "^1.1.1",
        "tslint": "^5.20.1",
        "typescript": "^3.7.5"
    }
}
